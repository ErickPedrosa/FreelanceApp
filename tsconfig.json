{
    "compilerOptions": {
      "target": "ES6",
      "types": ["jest", "node"],
      "lib": ["dom", "dom.iterable", "esnext"],
      "jsx": "react-jsx",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }